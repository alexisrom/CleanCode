{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "complexity": ["warn", 4],
    "consistent-return": "warn",
    "no-console": "off",
    "no-const-assign": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 1 }],
    "max-depth": ["warn", 2],
    "max-len": ["warn", 64],
    "max-lines": ["warn", 128],
    "max-statements": ["warn", 8],
    "max-statements-per-line": ["warn", 1],
    "max-params": ["warn", 4]
  }
}
